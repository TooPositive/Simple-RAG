# .env.example
# Template for environment variables required by the RAG chatbot
#
# IMPORTANT:
# 1. Copy this file to .env in the project root
# 2. Replace all placeholder values with your actual Azure OpenAI credentials
# 3. NEVER commit the .env file to version control (it's in .gitignore)

# ============================================
# Azure OpenAI Configuration (v1.0)
# ============================================
# Get these from your Azure OpenAI resource in the Azure Portal

# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY="your_api_key_here"

# Your Azure OpenAI endpoint URL (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT="https://your_endpoint.openai.azure.com/"

# API version to use - check Azure docs for the latest stable version
# Document Intelligence and Whisper require 2024-12-01-preview or later
OPENAI_API_VERSION="2024-12-01-preview"

# Model deployment names (optional - defaults are provided)
# These should match your actual deployment names in Azure

# Embedding model deployment name (for text-to-vector conversion)
EMBEDDING_MODEL_NAME="text-embedding-3-small"

# LLM model deployment name (for chat completions)
# Use gpt-4o-mini for cost-effective performance or gpt-4o for better quality
LLM_MODEL_NAME="gpt-4o-mini"

# Note: You also need a "whisper" deployment for audio transcription
# This is configured automatically in Azure OpenAI

# ============================================
# v2.0 Agent Configuration
# ============================================

# Agent behavior settings
AGENT_MAX_ITERATIONS=10
AGENT_REFLECTION_ENABLED=true
AGENT_TEMPERATURE=0.7

# Reasoning and reflection temperatures
REASONING_TEMPERATURE=0.7
REFLECTION_TEMPERATURE=0.3
GENERATION_TEMPERATURE=0.8

# Tool configuration
MAX_TOOL_RETRIES=3
TOOL_TIMEOUT_SECONDS=30

# ============================================
# LangSmith Observability (Optional)
# ============================================
# Sign up at: https://smith.langchain.com/
# Uncomment and configure these variables to enable LangSmith tracing
# LANGSMITH_API_KEY="your_langsmith_key"
# LANGSMITH_PROJECT="simple-rag-v2"
# LANGSMITH_TRACING=true

# ============================================
# Development Settings
# ============================================
LOG_LEVEL="INFO"
ENABLE_DEBUG_MODE=false
